{
  "name": "Juxtopposed Youtube UI",
  "version": "0.1.0",
  "description": "Extension based on the Juxtopposed Youtube UI redesign",
  "permissions": ["storage", "tabs", "scripting", "webNavigation"],

  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": [
        "src/js/aside-menu.js",
        "src/js/transition-listeners.js",
        "src/js/watch.js"
      ],
      "css": ["src/style/global.css", "src/style/watch.css"]
    },
    {
      "matches": ["https://*.youtube.com/watch*"],
      "js": ["src/js/watch.js"],
      "css": ["src/style/global.css", "src/style/watch.css"]
    }
  ],
  "host_permissions": ["https://*.youtube.com/*"],
  "web_accessible_resources": [
    {
      "scripting": ["src/js/watch.js"],
      "css": ["src/style/global.css", "src/style/watch.css"],
      "resources": ["src/assets/arrow-down.svg"],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "manifest_version": 3
}
