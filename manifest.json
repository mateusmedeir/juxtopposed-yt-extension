{
  "name": "Juxtopposed Youtube UI",
  "version": "0.1.0",
  "description": "Extension based on the Juxtopposed Youtube UI redesign",
  "permissions": ["tabs", "scripting", "webNavigation"],
  "background": {
    "service_worker": "src/js/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["src/js/aside-menu.js"],
      "css": ["src/style/global.css"]
    },
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["src/js/watch.js"],
      "css": ["src/style/global.css", "src/style/watch.css"]
    }
  ],
  "host_permissions": ["https://*.youtube.com/*", "https://*.youtube.com/watch*"],
  "web_accessible_resources": [
    {
      "resources": ["src/assets/arrow-down.svg"],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "manifest_version": 3
}
